{{search-input action="searchInputChanged" query=query}}
<div class="projects-table">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Rejected
        </th>
        <th>
          Pending
        </th>
        <th>
          Accepted
        </th>
        <th>
          Total
        </th>
        <th>
          Review status
        </th>
        <th>
          Github link
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each content key="id" as |project|}}
        <tr>
          <td>
            {{#link-to 'project.commits' project}}{{project.name}}{{/link-to}}
          </td>
          <td>{{project.rejected}}</td>
          <td>{{project.pending}}</td>
          <td>{{project.accepted}}</td>
          <td>{{project.total}}</td>
          <td>
            {{#if project.reviewIsGood}}
              <i class="glyphicon glyphicon-ok text-success">
              </i>
            {{else}}
              <i class="glyphicon glyphicon-remove text-danger">
              </i>
            {{/if}}
          </td>
          <td>
            <a target="_blank" href={{project.url}}>
              <span class="glyphicon glyphicon-link">
              </span>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{page-numbers content=content action=(action 'pageClicked')}}
